{
  "name": "papillonbits",
  "description": "Papillon Bits",
  "engines": {
    "node": "17.4.0",
    "npm": "8.3.1"
  },
  "homepage": "https://github.com/papillonbits/papillonbits#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/papillonbits/papillonbits.git"
  },
  "scripts": {
    "clean-up": "rm -rf node_modules package-lock.json .storybook-static-develop .storybook-static-release coverage && npm i lerna -D && lerna run clean-up --stream",
    "install-packages": "npm install && lerna run install-packages --stream",
    "install-papillonbits-latest": "npm i \"@papillonbits/components\"@latest && npm i \"@papillonbits/library\"@latest && lerna run install-papillonbits-latest --stream",
    "collect-build-folders": "mv packages/library/build/* packages/library && rm -rf packages/library/build",
    "restore-build-folders": "rm -rf packages/library/build && mkdir packages/library/build && mv packages/library/a11y packages/library/array packages/library/auth packages/library/boolean packages/library/browser packages/library/date packages/library/event packages/library/hooks packages/library/number packages/library/object packages/library/pagination packages/library/sort packages/library/store packages/library/string packages/library/build/",
    "release": "npm run collect-build-folders && lerna publish && npm run restore-build-folders",
    "start-storybook-develop": "NODE_ENV=develop start-storybook -p 3003 -c ./.storybook/develop",
    "start-storybook-release": "NODE_ENV=release start-storybook -p 5005 -c ./.storybook/release",
    "build-storybook-develop": "NODE_ENV=develop build-storybook -c .storybook/develop -o .storybook-static-develop",
    "build-storybook-release": "NODE_ENV=release build-storybook -c .storybook/release -o .storybook-static-release",
    "prebuild-storybook-develop": "NODE_ENV=develop npm run test:generate-output",
    "prebuild-storybook-release": "NODE_ENV=release npm run test:generate-output",
    "deploy-storybook-develop": "gh-pages -d .storybook-static-develop",
    "deploy-storybook-release": "gh-pages -d .storybook-static-release",
    "bootstrap-test": "npm-run-all build-test build-storybook-develop build-storybook-release lint:format test report-coverage",
    "bootstrap-acceptance": "npm-run-all build-acceptance build-storybook-develop build-storybook-release lint:format test report-coverage",
    "bootstrap-release": "npm-run-all build-release build-storybook-develop build-storybook-release lint:format test report-coverage",
    "lint:format": "npm-run-all lint format",
    "lint": "npm-run-all lint:js:jsx lint:scss",
    "lint:js:jsx": "npm-run-all lint:js:jsx:components lint:js:jsx:docs lint:js:library",
    "lint:js:jsx:components": "eslint --ext .js --ext .jsx packages/components/src --fix",
    "lint:js:jsx:docs": "eslint --ext .js --ext .jsx packages/docs/src --fix",
    "lint:js:library": "eslint --ext .js packages/library/src --fix",
    "lint:scss": "stylelint \"packages/components/src/**/**/*.scss\" --custom-syntax=postcss-scss --fix",
    "format": "npm-run-all format:js:jsx format:scss",
    "format:js:jsx": "npm-run-all format:js:jsx:components format:js:jsx:docs format:js:library",
    "format:js:jsx:components": "prettier --write \"packages/components/src/**/**/*.{js,jsx}\"",
    "format:js:jsx:docs": "prettier --write \"packages/docs/src/**/**/*.{js,jsx}\"",
    "format:js:library": "prettier --write \"packages/library/src/**/**/*.js\"",
    "format:scss": "prettier --write \"packages/components/src/**/**/*.scss\"",
    "test": "jest -u --silent --runInBand --coverage",
    "test:tdd": "jest --watch --onlyChanged --silent=false --verbose",
    "test:generate-output": "jest --coverage=false --json --outputFile=.jest-test-results.json || true",
    "report-coverage": "codecov",
    "build-test": "lerna run build-test --stream",
    "build-acceptance": "lerna run build-acceptance --stream",
    "build-release": "lerna run build-release --stream"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.12",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.16.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.16.7",
    "@babel/plugin-proposal-optional-catch-binding": "^7.16.7",
    "@babel/plugin-proposal-optional-chaining": "^7.16.7",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-classes": "^7.16.7",
    "@babel/plugin-transform-react-jsx": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/plugin-transform-spread": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/register": "^7.16.9",
    "@babel/runtime": "^7.16.7",
    "@svgr/webpack": "^6.2.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.6",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^27.4.6",
    "babel-loader": "^8.2.3",
    "babel-plugin-css-modules-transform": "^1.6.2",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-assets": "^1.0.2",
    "codecov": "^3.8.3",
    "enzyme": "^3.11.0",
    "eslint": "^8.7.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.7",
    "jest-axe": "^5.0.1",
    "jest-enzyme": "^7.1.2",
    "jsdom": "^19.0.0",
    "jsdom-global": "^3.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^12.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "react-test-renderer": "^17.0.2",
    "regenerator-runtime": "^0.13.9",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.1.0"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1",
    "redux": "^4.1.2",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.5.4",
    "redux-thunk": "^2.4.1",
    "uuid": "^8.3.2",
    "whatwg-fetch": "^3.6.2"
  }
}
